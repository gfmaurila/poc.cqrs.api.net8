{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "apicore-route": {
        "ClusterId": "apicore-cluster",
        "Match": {
          "Path": "api-core/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "apirh-route": {
        "ClusterId": "apirh-cluster",
        "Match": {
          "Path": "api-rh/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "apimkt-route": {
        "ClusterId": "apimkt-cluster",
        "Match": {
          "Path": "api-mkt/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "apicore-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://poc.core.api.webapi:5075"
          }
        }
      },
      "apirh-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://poc.rh.api.webapi:5076"
          }
        }
      },
      "apimkt-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://poc.mkt.api.webapi:5077"
          }
        }
      }
    }
  }
}
